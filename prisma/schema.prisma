generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // url      = "file:./dev.db"
  url      = env("DATABASE_URL")
}

model User {
  // Personal info
  firstname      String
  lastname       String
  email          String
  img            String?
  wallet_address String    @unique
  // Bank
  bank_name      String
  bank_number    String
  payment_method String
  trades_count   Int
  //Relationships
  orders         Orders[]
  // essential
  id             String    @id @default(uuid())
  created_at     DateTime? @default(now())
  updated_at     DateTime? @updatedAt
}

