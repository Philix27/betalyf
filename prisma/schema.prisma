model Exchange {
  rate           String
  payment_method String
  limit          String
  id             String    @id @default(uuid())
  created_at     DateTime? @default(now())
  updated_at     DateTime? @updatedAt
}

model Orders {
  status     OrderStatus
  type       ExchangeType
    // relationships
  user_id    String?
  user       User?        @relation(fields: [user_id], references: [id])
  // essential
  id         String       @id @default(uuid())
  created_at DateTime?    @default(now())
  updated_at DateTime?    @updatedAt
}

enum OrderStatus {
  COMPLETED
  PENDING
  DECLINE
}

enum ExchangeType {
  BUY
  SELL
}
